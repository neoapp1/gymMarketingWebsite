<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Set base directory
  RewriteBase /
  
  # Don't rewrite files or directories that exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Rewrite all other requests to index.html
  RewriteRule ^ index.html [L]
</IfModule>
